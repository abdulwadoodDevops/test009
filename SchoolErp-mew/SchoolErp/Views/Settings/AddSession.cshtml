@model SchoolErp.Models.Admin.Session
@{
    ViewBag.Title = "Add Session";
    Layout = "~/Views/Shared/Admin.cshtml";
}

<div class="page-wrapper">
    <div class="page-breadcrumb">
        <div class="row">
            <div class="col-12 d-flex no-block align-items-center">
                <h4 class="page-title">Add Session</h4>
                <div class="ml-auto text-right">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="#">Home</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Session</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title m-b-0"><i class="fas fa-calendar-alt"></i>Add Session</h5>
                    </div>
                    <div>
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-horizontal">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.SessionName, htmlAttributes: new { @class = "control-label col-md-2" })
                                            @Html.EditorFor(model => model.SessionName, new { htmlAttributes = new { @class = "form-control", maxlength = 20 } })
                                            @Html.ValidationMessageFor(model => model.SessionName, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="Term">Term</label>
                                            @Html.DropDownListFor(model => model.Term, new SelectList(new[]
                                                {
                                                    new SelectListItem { Value = "One", Text = "First Term" },
                                                    new SelectListItem { Value = "Two", Text = "Second Term" },
                                                    new SelectListItem { Value = "Three", Text = "Third Term" }
                                                }, "Value", "Text"), "-- Select Term --", new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.Term, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="IsActive">Active Status</label>
                                    @Html.DropDownListFor(model => model.IsActive, new SelectList(new[]
                                                {
                                                    new SelectListItem { Value = "Active", Text = "Active" },
                                                    new SelectListItem { Value = "In-active", Text = "In-active" }
                                                }, "Value", "Text"), "-- Select Active --", new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.IsActive, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                <input type="checkbox" id="Remember" name="Authorized" value="false" />
                                <label for="Agree"> I Agree </label>
                            </div>                    

                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Create" class="btn btn-default" />
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts
{
    <script>
        $(function () {
            var successMessage = '@TempData["SuccessMessage"]'
            if (successMessage != '')
                alertify.success(successMessage);
        });

    </script>
}
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
